  "favicon": "/favicon.svg",
  "navigation": {
    "tabs": [
      {
        "tab": "Documentation",
        "groups": [
          {
            "group": "Getting Started",
            "pages": ["index", "quickstart", "installation"]
          },
          {
            "group": "CLI Reference",
            "pages": [
              "cli/overview",
              "cli/record",
              "cli/crawl",
              "cli/run",
              "cli/payloads",
              "cli/plugin",
              "cli/init"
            ]
          },
          {
            "group": "Configuration",
            "pages": ["config/overview", "config/plugins", "config/settings"]
          }
        ]
      },
      {
        "tab": "Drivers",
        "groups": [
          {
            "group": "Driver System",
            "pages": ["drivers/overview", "drivers/creating-drivers"]
          },
          {
            "group": "Official Drivers",
            "pages": ["drivers/browser"]
          }
        ]
      },
      {
        "tab": "Plugins",
        "groups": [
          {
            "group": "Plugin System",
            "pages": ["plugins/overview", "plugins/hooks"]
          },
          {
            "group": "Official Plugins",
            "pages": [
              "plugins/plugin-payloads",
              "plugins/plugin-detect-xss",
              "plugins/plugin-detect-sqli",
              "plugins/plugin-detect-reflection",
              "plugins/plugin-report"
            ]
          },
          {
            "group": "Custom Plugins",
            "pages": ["plugins/creating-plugins", "plugins/plugin-api"]
          }
        ]
      },
      {
        "tab": "API Reference",
        "groups": [
          {
            "group": "Engine API",
            "pages": [
              "api/overview",
              "api/driver-manager",
              "api/plugin-manager"
            ]
          },
          {
            "group": "Types",
            "pages": ["api/types"]
          }
        ]
      }
    ],
    "global": {
      "anchors": [
        {
          "anchor": "GitHub",
          "href": "https://github.com/vulcnize/vulcn",
          "icon": "github"
        },
        {
          "anchor": "vulcn.dev",
          "href": "https://vulcn.dev",
          "icon": "globe"
        }
      ]
    }
  },
  "logo": {
    "light": "/logo/vulcn.png",
    "dark": "/logo/vulcn.png"
